
@{
    Layout = null;
}
@model BilgeAdam.UI.Web.Models.VM.LoginVM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <form action="/Login/Index" method="post">
            <div>
                @Html.LabelFor(q => q.EMail)
                @Html.TextBoxFor(q => q.EMail)
            </div>
            <div>
                @Html.LabelFor(q => q.Password)
                @Html.PasswordFor(q => q.Password)
            </div>
            <div>
                <input type="submit" name="name" value="Kayıt" />
            </div>
        </form>
    </div>
</body>
</html>
